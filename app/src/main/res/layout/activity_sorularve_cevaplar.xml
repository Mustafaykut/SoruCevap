<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sorularve_cevaplar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sorucevap"
    tools:context="com.example.mohammad.sorucevap.SorularveCevaplarActivity">

    <TextView
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/soru"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:layout_below="@+id/puan"
        android:layout_alignStart="@+id/a"
        android:layout_alignEnd="@+id/pas" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/a"
        android:layout_marginTop="68dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentStart="true"
        android:text="Button"
        android:layout_below="@+id/soru"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b"
        android:layout_marginTop="18dp"
        android:text="Button"
        android:layout_below="@+id/a"
        android:layout_alignStart="@+id/a"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/d"
        android:layout_marginTop="14dp"
        android:text="Button"
        android:layout_below="@+id/c"
        android:layout_alignStart="@+id/c"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/c"
        android:layout_marginTop="14dp"
        android:text="Button"
        android:layout_below="@+id/b"
        android:layout_alignStart="@+id/b"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pas"
        android:text="pas"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/zaman"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/puan"
        android:text="TextView"
        android:layout_below="@+id/zaman"
        android:layout_alignEnd="@+id/soru" />

</RelativeLayout>
